<section id="today">

  <div class="container readable stack">

    <hgroup role="group" aria-roledescription="Heading group">
      <h2>Today</h2>
      <p aria-roledescription="subtitle">
        {% edge "liquid" %}
          <time datetime="{% todayISO %}">{% today %} in {% timezone %}</time>
        {% endedge %}

      </p>
    </hgroup>

    {% edge "liquid" events %}
      <div class="events events--list stack">

        {% assign todaysThemes = events | todaysThemes | sort: "dateStart" %}

        {% for event in todaysThemes %}
          <article
            class="event event--theme"
            itemprop="event"
            itemscope
            itemtype="https://schema.org/Event">
            <h3 class="event__title" itemprop="name">
              {% if event.url %}
                <a href="{{ event.url }}">{{ event.title }}</a>
              {% else %}
                {{ event.title }}{% endif %}
            </h3>
            <div class="event__dates">
              <span class="event__dateStart">
                <span class="sr-only">Starts
                </span>
                <time datetime="{{ event.dateStart | isoDate }}" itemprop="startDate">{{ event.dateStart | localizeDate }}</time>
              </span>
              {% if event.dateEnd %}
                <span class="event__dateEnd">
                  <span class="sr-only">Ends
                  </span>
                  <i class="fa-solid fa-arrow-right-long"></i>
                  <time datetime="{{event.dateEnd | isoDate}}" itemprop="endDate">{{ event.dateEnd | localizeDate }}</time>
                </span>
              {% endif %}
            </div>
            <!-- End dates -->
            <span class="event__location" itemprop="location">
              <i class="fa-solid fa-fw fa-location-dot"></i>
              {{ event.location }}</span>
          </article>
          <!-- End event -->
        {% endfor %}
        <!-- End themes -->
      </div>
      <!-- End .events -->

      <div class="events events--list stack">
        {% assign todaysEvents = events | todaysEvents | sort: "dateStart" %}
        {% for event in todaysEvents %}
          <article
            class="event event--{{ event.type }}"
            itemprop="event"
            itemscope
            itemtype="https://schema.org/Event">
            <h3 class="event__title" itemprop="name">
              {% if event.url %}
                <a href="{{ event.url }}">{{ event.title }}</a>
              {% else %}
                {{ event.title }}{% endif %}
            </h3>
            <div class="event__dates">
              <span class="event__dateStart">
                <span class="sr-only">Starts
                </span>
                <time datetime="{{ event.dateStart | isoDate }}" itemprop="startDate">{{ event.dateStart | localizeDate }}</time>
              </span>
              {% if event.dateEnd %}
                <span class="event__dateEnd">
                  <span class="sr-only">Ends
                  </span>
                  <i class="fa-solid fa-arrow-right-long"></i>
                  <time datetime="{{event.dateEnd | isoDate}}" itemprop="endDate">{{ event.dateEnd | localizeDate }}</time>
                </span>
              {% endif %}
            </div>
            <!-- End dates -->
            <div class="event__delivery">
              {% if event.location %}
                <span class="event__location" itemprop="location">
                  <i class="fa-solid fa-fw fa-location-dot"></i>
                  {{ event.location }}</span>
              {% endif %}
              {% if event.online %}
                <span class="event__online">
                  <i class="fa-solid fa-laptop-arrow-down"></i>
                  Online</span>
              {% endif %}
            </div>
            <p class="event__description">
              {% if event.description %}
                {{ event.description }}{% endif %}
            </p>
            {% if event.cpacc or event.was or event.cpwa %}
              <span class="event__iaap">
                <img
                  class="event__iaaplogo"
                  src="/images/iaap.png"
                  alt="IAAP" />
                <span>Credits pre-approved for
                  {% if event.cpacc %}
                    <abbr title="Certified Professional in Accessibility Core Competencies">CPACC</abbr>
                  {% endif %}
                  {% if event.was %}
                    <abbr title="Web Accessibility Specialist">WAS</abbr>
                  {% endif %}
                  {% if event.cpwa %}
                    <abbr title="Certified Professional in Web Accessibility">CPWA</abbr>
                  {% endif %}
                </span>
              </span>
            {% endif %}
          </article>
          <!-- End .event -->
        {% endfor %}
        <!-- End events -->
      </div>
      <!-- End events -->
    {% endedge %}

  </div>
  <!-- End .container -->

</section>
<!-- End #today -->