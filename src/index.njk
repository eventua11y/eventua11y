---
title: Eventua11y
layout: layouts/base.njk
---

<div class="container">

    <h1 class="sr-only">Accessibility Events</h1>

    <section id="upcoming">
        <h2>Upcoming Events</h2>
        <div class="events events--list">
            {% for event in events|sort(attribute="dateStart") %}
            {%- if event.type == "Theme Day" %}
            
                <article class="event--theme" itemprop="event" itemscope itemtype="https://schema.org/Event">
                    <div class="content">
                        <h3 class="event__title" itemprop="name">{% if event.url %}<a href="{{ event.url }}">{{ event.title }}</a>{% endif %}</h3>
                        <span class="event__dateStart"><span class="sr-only">Starts </span><span itemprop="startDate">{{ event.dateStart | eventDate }}</span></span>
                        <span class="event__location" itemprop="location"><i class="fa-solid fa-fw fa-location-dot"></i> {{ event.location }}</span>
                    </div>
                </article>
                <!-- End event -->

            {% else %}
            
                <article class="event event--{{ event.type }}" itemprop="event" itemscope itemtype="https://schema.org/Event">
                    <div class="content">
                        <div class="event__definition">
                            <div>
                                <span class="event__type">{{ event.type }}</span>
                                <h3 class="event__title" itemprop="name">{% if event.url %}<a href="{{ event.url }}">{{ event.title }}</a>{% else %}{{ event.title }}{% endif %}</h3>
                                <span class="event__dateStart"><span class="sr-only">Starts </span><span itemprop="startDate">{{ event.dateStart | eventDate }}</span></span>
                                {% if event.dateEnd %}
                                <span class="event__dateEnd"><span class="sr-only">Ends </span><i class="fa-solid fa-arrow-right-long"></i> <span itemprop="endDate">{{ event.dateEnd | eventDate }}</span></span>
                                {% endif %}
                                <span class="event__location" itemprop="location"><i class="fa-solid fa-fw fa-location-dot"></i> {{ event.location }}</span>
                            </div>
                            {% if event.cpacc or event.was or event.cpwa %}
                                <span class="event__iaap">
                                    <img class="event__iaaplogo" src="/images/iaap.png" alt="IAAP" /> <span>Credits pre-approved for 
                                    {% if event.cpacc %}
                                        <abbr title="Certified Professional in Accessibility Core Competencies">CPACC</abbr>
                                    {% endif %}
                                    {% if event.was %}
                                        <abbr title="Web Accessibility Specialist">WAS</abbr>
                                    {% endif %}
                                    {% if event.cpwa %}
                                        <abbr title="Certified Professional in Web Accessibility">CPWA</abbr>
                                    {% endif %}
                                </span></span>
                            {% endif %}
                        </div>
                        <!-- End definition -->
                        <div class="event__description">
                            {{ event.description }}
                        </div>
                        <!-- End description -->
                    </div>
                </article>
                <!-- End event -->
                {% endif %}

            {% endfor %}
        </div>
    </section>
    <!-- End upcoming events -->

</div>
<!-- End container -->